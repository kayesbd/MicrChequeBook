@{
    Layout = null;
}















<div class="main-content nomarginleft">

    <div class="container">

        <div class="page-header">
            <h1>Change Password</h1>
        </div>

        <div class="row">
            <br>
            <form class="form-horizontal" name="changePasswordForm" novalidate>

                @Html.AntiForgeryToken()
                <div class="col-sm-12" style="padding:0; margin:0">
                    <div class="col-sm-12" id="editPanel">
                        @*<div validation-summary ng-show="showValidation">*@
                        <div validation-summary ng-show="(changePasswordForm.$dirty && changePasswordForm.$invalid) || (changePasswordForm.$invalid && submitted)">
                        </div>

                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <span class="fa fa-00 icomoon-search-4"></span>
                                <span style="font-size:medium; color:#243972;">Credential Information</span>
                            </div>



                            <div class="panel-body">
                                <div class="col-sm-12">


                                    <div class="col-sm-6">
                                        <div class="form-group ">
                                            <label class="col-sm-4 control-label">
                                                Old Password:
                                            </label>
                                            <div class="col-sm-8">
                                                <input type="password" class="form-control" ng-model="userInfoVM.OldPassword" name="OldPassword" required ng-class="{ 'error-mark' : changePasswordForm.OldPassword.$error.required && submitted }" />
                                                <div validation-message ng-show="(changePasswordForm.OldPassword.$dirty && changePasswordForm.OldPassword.$error.required) || (changePasswordForm.Password.$error.required && submitted)" class="error">
                                                    Old password is required!
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group ">
                                            <label class="col-sm-4 control-label">
                                                New Password :
                                            </label>
                                            <div class="col-sm-8">
                                                <input type="password" class="form-control immediate-help" name="Password" ng-model="userInfoVM.NewPassword" password-validate required ng-class="{ 'error-mark' : (changePasswordForm.Password.$dirty && customerForm.Password.$error.required) || (changePasswordForm.Password.$error.required && submitted)}" />

                                                <div class="input-help" style="left: 418px !important;">
                                                    <h4>Password must meet the following requirements:</h4>
                                                    <ul>
                                                        <li ng-class="pwdHasUpperCaseLetter"><strong>1 uppercase letter</strong></li>
                                                        <li ng-class="pwdHasLowerCaseLetter"><strong>1 lowercase letter</strong></li>
                                                        <li ng-class="pwdHasNumber"><strong>1 number</strong></li>
                                                        <li ng-class="pwdValidLength"><strong>10 characters long</strong></li>
                                                        <li ng-class="pwdHasSpecialCharacter"><strong>1 special character</strong></li>
                                                    </ul>
                                                </div>

                                                <div validation-message ng-show="(changePasswordForm.Password.$dirty && changePasswordForm.Password.$error.required) || (changePasswordForm.Password.$error.required && submitted)" class="error">
                                                    Password Field required
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group ">
                                            <label class="col-sm-4 control-label">
                                                Confirm Password :
                                            </label>
                                            <div class="col-sm-8">
                                                <input type="password" class="form-control" name="confirm_password" ng-model="user.confirm_password" data-password-verify="userInfoVM.NewPassword" required ng-class="{ 'error-mark' : (changePasswordForm.confirm_password.$dirty && changePasswordForm.confirm_password.$error.required) || (changePasswordForm.confirm_password.$error.required && submitted)}" />
                                                <div validation-message ng-show="(changePasswordForm.confirm_password.$dirty && changePasswordForm.confirm_password.$error.required) || (changePasswordForm.confirm_password.$error.required && submitted)" class="error">
                                                    Confirm Password required!
                                                </div>
                                                <div validation-message ng-show="changePasswordForm.confirm_password.$error.passwordVerify" class="error">
                                                    Password does not match!
                                                </div>
                                            </div>
                                        </div>


                                        <div class="form-group ">
                                            <label class="col-sm-4 control-label">

                                            </label>
                                            <div class="col-sm-8">
                                                <br />
                                                <button type="button" class="btn btn-primary" ng-click="changePassword(changePasswordForm)"><span class=" icomoon-checkmark-circle-2"></span>  Submit</button>
                                                <button type="button" class="btn btn-primary" ng-click="cancel()"><span class=" icomoon-cancel-circle"></span> Cancel</button>
                                            </div>
                                        </div>

                                    </div>
                                    <div class="col-sm-6">
                                        <div align="center" ng-model="model.captcha">
                                            @* @Html.Raw(Html.GenerateCaptcha("", "white"))*@

                                            <div vc-recaptcha
                                                 theme="light"
                                                 key="model.key"
                                                 on-create="setWidgetId(widgetId)"
                                                 on-success="setResponse(response)"></div>
                                        </div>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>





